@model Restaurant

<section class="panel panel-default">
    <h3 class="panel-heading">@Model.Name</h3>
    <div class="panel-body">
        Cuisine: @Model.CuisineType
    </div>

    <div class="panel-footer">
        <a class="btn btn-default" asp-controller="Home" asp-action="Details" asp-route-id="@Model.Id">Open</a>
        <a class="btn btn-default" asp-page="/Restaurant/Edit" asp-route-id="@Model.Id">Edit</a>
    </div>
</section>